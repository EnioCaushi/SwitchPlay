@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <!-- Include your other head elements here -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>
    <div class="container-fluid" id="main">
        <div class="row row-offcanvas row-offcanvas-left">

            <!--/col-->

            <div class="col main pt-5 mt-3">
                <h1 class="display-4 d-none d-sm-block">
                    Mireseerdhet ne SwitchPlay
                </h1>

                <div class="alert alert-warning fade collapse" role="alert" id="myAlert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                        <span class="sr-only">Close</span>
                    </button>

                </div>
                <div class="row mb-3">
                    <div class="col-xl-3 col-sm-6 py-2">
                        <div class="card bg-success text-white h-100">
                            <div class="card-body bg-success">

                                <h6 class="text-uppercase">Kategorite</h6>
                                <h1 class="display-4" id="categoryCount"></h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-6 py-2">
                        <div class="card text-white bg-danger h-100">
                            <div class="card-body bg-danger">

                                <h6 class="text-uppercase">Platformat</h6>
                                <h1 class="display-4" id="platformCount"></h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-6 py-2">
                        <div class="card text-white bg-info h-100">
                            <div class="card-body bg-info">

                                <h6 class="text-uppercase">Studiot</h6>
                                <h1 class="display-4" id="studioCount"></h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-6 py-2">
                        <div class="card text-white bg-warning h-100">
                            <div class="card-body">

                                <h6 class="text-uppercase">Lojat</h6>
                                <h1 class="display-4" id="gameCount"></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <script>
                    $(document).ready(function () {
                        // Fetch and update category count
                        $.get('/Category/GetCategoryCount', function (data) {
                            $('#categoryCount').html(data);
                        });
                    });
                    $(document).ready(function () {
                        // Fetch and update category count
                        $.get('/Studio/GetStudioCount', function (data) {
                            $('#studioCount').html(data);
                        });
                    });
                    $(document).ready(function () {
                        // Fetch and update category count
                        $.get('/Platform/GetPlatformCount', function (data) {
                            $('#platformCount').html(data);
                        });
                    });
                    $(document).ready(function () {
                        // Fetch and update category count
                        $.get('/Game/GetGameCount', function (data) {
                            $('#gameCount').html(data);
                        });
                    });
                </script>
</body>
           

           

<script>
    $(document).ready(function () {

        $('[data-toggle=offcanvas]').click(function () {
            $('.row-offcanvas').toggleClass('active');
        });

    });
</script>


