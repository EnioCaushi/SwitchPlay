@model IEnumerable<SwitchPlay.Identity.AppUser>
@{
    ViewData["Title"] = "Lista e Perdoruesve";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header">
                        <h4 class="card-title">Lista e Perdoruesve</h4>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <a asp-action="Register" asp-controller="Account" class="btn btn-outline-primary">Krijo Perdorues</a>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Emer</th>
                                    <th>Pershkrimi</th>
                                    <th>Veprimet</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>
                                            <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="DeleteUser">Fshi</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
}